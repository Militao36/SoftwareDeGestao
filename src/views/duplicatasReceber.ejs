<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/duplicataReceber.css">
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include('components/navbar'); %>
        <br>

        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Pedido</li>
                </ol>
            </nav>
            <div class="row">
                <div class="col-md-6">
                    <ul class="nav nav-tabs" id="tab-Produto" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                aria-controls="home" aria-selected="true">Dados</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <br>
                            <form id="frmPedido">
                                <div class="row">
                                    <div class="col-md-12" style="display: none;">
                                        <input type="text" id="uuid" class="form-control">
                                    </div>
                                    <div class="col-md-7">
                                        <select class="form-control" id="idCliente">
                                            <option value=''>
                                                --- Selecione o Cliente ---
                                            </option>
                                            <% for(let i=0; i < cliente.length;i++){ %>
                                                <option value="<%= cliente[i].uuid %>">
                                                    <%= cliente[i].nome %>
                                                </option>
                                            <% }%>
                                        </select>
                                        <div id="IidCliente" style="display: none;">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <input type="date" id="dataEmissao" class="form-control">
                                        <div id="IdataEmissao" style="display: none;">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="date" id="dataVencimento" class="form-control">
                                        <div id="IdataVencimento" style="display: none;">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <input type="date" id="dataPagamento" class="form-control">
                                        <div id="IdataPagamento" style="display: none;">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <textarea rows="2" style="margin-top: 10px;" id="observacao" maxlength="100"
                                            class="form-control" placeholder="Observação"></textarea>
                                        <div id="Iobservacao" style="display: none;">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <button class="btn btn-success" style="margin-top:10px" id="btnSalvar">Salvar</button>
                            <button class="btn btn-secondary" style="margin-top:10px" id="btnNovo">Novo</button>
                            <button class="btn btn-danger" style="margin-top:10px" id="btnDeletar">Deletar</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="pesquisa">
                        <input type="text" id="txtPesquisa" class="form-control" placeholder="Pesquisar"
                            style="margin-bottom: 10px;">
                        <select class="form-control" id="selectColuna">
                            <option value="nomeCliente">Nome</option>
                            <option value="dataPedido">Data Pedido</option>
                            <option value="nomeFuncionario">Funcionario</option>
                        </select>
                    </div>
                    <table class="table table-dark" id="tablePedido">
                        <thead>
                            <tr>
                                <th scope="col-md">Nome</th>
                                <th scope="col-md">Data Pedido</th>
                                <th scope="col-md">Status</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <br><br>
        <br><br>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns"
            crossorigin="anonymous"></script>
</body>

</html>